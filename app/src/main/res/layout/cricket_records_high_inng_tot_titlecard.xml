<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/padding_7dp"
        android:layout_marginRight="@dimen/padding_7dp"
        android:layout_marginTop="@dimen/padding_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/layout1"
                android:background="@color/grey_light1"
                android:paddingBottom="@dimen/padding_7dp"
                android:paddingTop="@dimen/padding_7dp"
                android:paddingRight="@dimen/padding_3dp"
                android:paddingLeft="@dimen/padding_3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Title"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_subtitle_19dp"
                    android:id="@+id/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_itemsrow_12dp"
                    android:text="Score"
                    android:id="@+id/last_update_date" />
            </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/padding_7dp"
            android:layout_below="@+id/layout1"
            android:padding="@dimen/padding_3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight=".20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="@dimen/font_itemsrow_18dp"
                android:text="Score"
                android:id="@+id/score" />

            <TextView
                android:layout_weight=".31"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_3dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_itemsrow_17dp"
                android:text="INDW Vs INDW"
                android:id="@+id/teams" />
            <TextView
                android:layout_weight=".49"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_3dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_itemsrow_17dp"
                android:text="Teams and Ground"
                android:id="@+id/ground" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>