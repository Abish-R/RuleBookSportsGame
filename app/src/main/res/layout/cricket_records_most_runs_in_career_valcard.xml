                    <!--android:paddingTop="5dp"-->
                    <!--android:paddingLeft="3dp"-->
                    <!--android:paddingRight="3dp"-->
                    <!--android:paddingBottom="3dp"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content" />-->
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>