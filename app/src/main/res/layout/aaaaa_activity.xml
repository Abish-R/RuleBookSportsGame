<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AAAAA" >
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight=".25"
	    android:gravity="center"
	    android:orientation="vertical" >

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

    	<TextView 
    	    android:id="@+id/t1"
    	    android:gravity="center"
    	    android:textSize="30dp"
    	    android:text="100000"
    	    android:background="@color/mycolor2"
    	    android:layout_weight="3.5"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    	<TextView 
    	    android:id="@+id/t2"
    	    android:gravity="center"
    	    android:textSize="30dp"
    	    android:text="/"
    	    android:background="@color/mycolor2"
    	    android:layout_weight="1.2"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    	<TextView 
    	    android:id="@+id/t3"
    	    android:gravity="center"
    	    android:textSize="30dp"
    	    android:text="1  ="
    	    android:background="@color/mycolor2"
    	    android:layout_weight="1.8"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    	<TextView 
    	    android:id="@+id/t4"
    	    android:gravity="center"
    	    android:textSize="30dp"
    	    android:text="1"
    	    android:background="@color/mycolor2"
    	    android:layout_weight="3.5"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >

    	<TextView 
    	    android:gravity="left"
    	    android:textSize="12dp"
    	    android:text="Key Value"
    	    android:background="@color/mycolor2"
    	    android:layout_weight="3.5"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    	<TextView 
    	    android:gravity="left"
    	    android:textSize="12dp"
    	    android:text="Arith"
    	    android:background="@color/mycolor2"
    	    android:layout_weight="1.2"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    	<TextView 
    	    android:gravity="center"
    	    android:textSize="12dp"
    	    android:text="Game Val"
    	    android:background="@color/mycolor2"
    	    android:layout_weight="1.8"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    	<TextView 
    	    android:gravity="center"
    	    android:textSize="12dp"
    	    android:text="Output"
    	    android:background="@color/mycolor2"
    	    android:layout_weight="3.5"
    	    android:layout_width="0dp"
		    android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_weight=".75"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:orientation="horizontal">
        <LinearLayout 
            android:layout_weight=".72"
        	android:layout_width="0dp"
        	android:paddingLeft="10dp"
        	android:paddingRight="10dp"
        	
    		android:layout_height="match_parent"
    		android:orientation="vertical">
    		<LinearLayout 
    		    android:layout_weight="1"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
        		android:layout_marginBottom="18dp"
		    	android:orientation="horizontal">
		    	<Button 
		    	    android:id="@+id/b2"
		    	    android:textSize="50dp"
		    	    android:text="2"
		    	    android:layout_marginRight="7dp"
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
		    	<Button 
		    	    android:id="@+id/b3"
		    	    android:textSize="50dp"
		    	    android:text="3"
		    	    android:layout_marginRight="7dp"
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
		    	<Button
		    	    android:id="@+id/b4"
		    	    android:textSize="50dp"
		    	    android:text="4" 
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_weight="1"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="10dp"
        		android:layout_marginBottom="18dp"
		    	android:orientation="horizontal">
		    	<Button
		    	    android:id="@+id/b5"
		    	    android:textSize="50dp"
		    	    android:text="5" 
		    	    android:layout_marginRight="7dp"
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
		    	<Button
		    	    android:id="@+id/b6"
		    	    android:textSize="50dp"
		    	    android:text="6" 
		    	    android:layout_marginRight="7dp"
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
		    	<Button 
		    	    android:id="@+id/b7"
		    	    android:textSize="50dp"
		    	    android:text="7"
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
        	</LinearLayout>
        	<LinearLayout
        	    android:layout_weight="1" 
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_marginTop="10dp"
		    	android:orientation="horizontal">
		    	<Button 
		    	    android:id="@+id/b8"
		    	    android:textSize="50dp"
		    	    android:text="8"
		    	    android:layout_marginRight="7dp"
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
		    	<Button 
		    	    android:id="@+id/b9"
		    	    android:textSize="50dp"
		    	    android:text="9"
		    	    android:layout_marginRight="7dp"
		    	    android:background="@drawable/press_effect_reverse"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
		    	<Button 
		    	    android:id="@+id/bcross"
		    	    android:textSize="50dp"
		    	    android:text="x"
		    	    android:background="@drawable/press_effect"
		    	    android:layout_weight="1"
		    	    android:layout_width="0dp"
		    		android:layout_height="match_parent"/>
        	</LinearLayout>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_weight=".28"
        	android:layout_width="0dp"
        	android:paddingLeft="10dp"
        	android:paddingRight="10dp"
        	android:gravity="right|center"
    		android:layout_height="match_parent"
    		android:orientation="vertical">
	        <Button 
	            android:id="@+id/bplus"
	            android:textSize="50dp"
	            android:text="+"
	            android:layout_marginBottom="8dp"
	            android:background="@drawable/press_effect"
	    	    android:layout_weight="1"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	    	<Button 
	    	    android:id="@+id/bminus"
	    	    android:textSize="50dp"
	    	    android:text="-"
	    	    android:layout_marginBottom="8dp"
	    	    android:background="@drawable/press_effect"
	    	    android:layout_weight="1"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	    	<Button 
	    	    android:id="@+id/bdivide"
	    	    android:textSize="50dp"
	    	    android:text="/"
	    	    android:layout_marginBottom="8dp"
	    	    android:background="@drawable/press_effect"
	    	    android:layout_weight="1"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	    	<Button 
	    	    android:id="@+id/bmultiply"
	    	    android:textSize="50dp"
	    	    android:text="*"
	    	    android:background="@drawable/press_effect"
	    	    android:layout_weight="1"
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"/>
	    </LinearLayout>
    </LinearLayout>
    

</LinearLayout>
