<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--RelativeLayout
                android:visibility="gone"
                android:id="@+id/layout"
                android:paddingBottom="5dp"
                android:paddingTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/subtitle"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Subtitle"
                    android:paddingLeft="4dp"
                    android:paddingRight="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/last_update_date"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/subtitle"
                    android:textSize="11dp"
                    android:text="Last Update Date"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout-->
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_below="@+id/layout"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:text="Player"
                    android:textSize="19dp"
                    android:textStyle="italic"
                    android:textColor="@color/black"
                    android:layout_weight=".6"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/team1"
                    android:text="Team1"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_weight=".19"
                    android:paddingRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/team2"
                    android:text="Team2"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_weight=".21"
                    android:paddingRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:orientation="horizontal">
                <TextView
                    android:text="Overs"
                    android:textSize="15dp"
                    android:layout_weight=".19"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Maidens"
                    android:textSize="15dp"
                    android:layout_weight=".22"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Runs"
                    android:textSize="15dp"
                    android:layout_weight=".16"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Wickets"
                    android:textSize="15dp"
                    android:layout_weight=".21"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Econ"
                    android:textSize="15dp"
                    android:layout_weight=".18"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/overs"
                    android:text="Overs"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_weight=".19"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/maidens"
                    android:text="Maidens"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_weight=".22"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/runs"
                    android:text="Runs"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_weight=".16"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wickets"
                    android:text="Wickets"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_weight=".21"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/economy"
                    android:text="Econ"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_weight=".18"
                    android:paddingRight="3dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
                <TextView
                    android:id="@+id/ground_matchdate"
                    android:layout_below="@+id/layout3"
                    android:text="Ground, Date"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:paddingTop="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>