<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:background="@color/grey_light1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_title_22dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Date"
                android:id="@+id/date" />

            <TextView
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_itemsrow_17dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Team vs Team"
                android:gravity="center"
                android:layout_below="@+id/date"
                android:id="@+id/teams" />
            <TextView
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_itemsrow_18dp"
                android:textColor="@color/black"
                android:text="Format"
                android:layout_below="@+id/teams"
                android:layout_marginRight="5dp"
                android:id="@+id/format" />

            <TextView
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_itemsrow_18dp"
                android:textColor="@color/black"
                android:text="Series"
                android:layout_below="@+id/teams"
                android:layout_alignParentRight="true"
                android:id="@+id/series" />

            <TextView
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:paddingTop="@dimen/padding_3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_itemsrow_17dp"
                android:textColor="@color/black"
                android:text="Description"
                android:layout_below="@+id/series"
                android:id="@+id/descrip" />
            <TextView
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_itemsrow_17dp"
                android:textColor="@color/black"
                android:text="Venue"
                android:layout_below="@+id/descrip"
                android:layout_alignParentRight="true"
                android:id="@+id/venue" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue">
                <!--android:animateLayoutChanges="true"-->
                <TextView
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_itemsrow_17dp"
                    android:text="Time"
                    android:id="@+id/time_gmt"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_itemsrow_17dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentRight="true"
                    android:text="Time"
                    android:id="@+id/time_ist"
                    android:layout_gravity="center_horizontal" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>