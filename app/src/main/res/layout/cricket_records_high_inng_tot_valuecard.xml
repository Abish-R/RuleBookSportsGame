<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/padding_7dp"
        android:layout_marginRight="@dimen/padding_7dp"
        android:layout_marginTop="@dimen/padding_7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_below="@+id/layout1"
            android:padding="@dimen/padding_3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight=".2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="@dimen/font_itemsrow_18dp"
                android:text="Score"
                android:id="@+id/score" />

            <TextView
                android:layout_weight=".31"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_3dp"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_itemsrow_17dp"
                android:text="INDW Vs INDW"
                android:id="@+id/teams" />
            <TextView
                android:layout_weight=".49"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_3dp"
                android:gravity="right"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/font_itemsrow_17dp"
                android:text="Teams and Ground"
                android:id="@+id/ground" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>